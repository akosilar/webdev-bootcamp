<% layout('/layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add Campground</a>
</div>
<ul>
  <% campgrounds.forEach(camp => { %>
  <!-- <li><a href="/campgrounds/<%= camp._id %> "><%= camp.title %></a></li> -->
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          src="<% if (camp.images.length>0) { %>
          <%= camp.images[0].url %> "
          <%}%>
          class="img-fluid"
          alt=""
          srcset=""
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %> </small>
          </p>
          <a href="/campgrounds/<%= camp.id %> " class="btn btn-primary"
            >View <%= camp.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</ul>
